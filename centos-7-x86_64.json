{
  "variables": {
    "my_iso_url": "http://mirrors.kernel.org/centos/7.2.1511/isos/x86_64/CentOS-7-x86_64-Minimal-1511.iso"
  },
  "builders":[{
    "type": "virtualbox-iso",
    "guest_os_type": "RedHat_64",
    "iso_url": "{{user `my_iso_url`}}",
    "iso_checksum": "f90e4d28fa377669b2db16cbcb451fcb9a89d2460e3645993e30e137ac37d284",
    "iso_checksum_type": "sha256",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_wait_timeout": "3000s",
    "vm_name": "packer-centos-7-x86_64",
    "ssh_pty": true,
    "http_directory": "./",
    "boot_wait": "30s",
    "boot_command":[
      "<esc><wait>",
      "linux ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-7-x86_64/anaconda-ks.cfg",
      "<enter><wait>"
    ],
    "shutdown_command": "sudo /sbin/poweroff"
  }],
  "provisioners": [{
    "type": "shell",
    "scripts": "centos-7-x86_64/scripts.sh"
  }],
  "post-processors": [{
    "type": "vagrant",
    "output": "centos-7-x86_64.box"
  }]
}
