{
  "variables": {
    "my_iso_url": "http://mirrors.kernel.org/centos/7.4.1708/isos/x86_64/CentOS-7-x86_64-Minimal-1708.iso"
  },
  "builders":[{
    "type": "virtualbox-iso",
    "guest_os_type": "RedHat_64",
    "iso_url": "{{user `my_iso_url`}}",
    "iso_checksum": "bba314624956961a2ea31dd460cd860a77911c1e0a56e4820a12b9c5dad363f5",
    "iso_checksum_type": "sha256",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_wait_timeout": "30m",
    "vm_name": "packer-centos-7-x86_64",
    "ssh_pty": true,
    "http_directory": "./",
    "boot_wait": "12s",
    "boot_command":[
      "<esc><wait>",
      "linux inst.ks=http://{{.HTTPIP }}:{{.HTTPPort }}/centos-7-x86_64/anaconda-ks.cfg",
      "<enter><wait>"
    ],
    "shutdown_command": "sudo /sbin/poweroff"
  }],
  "provisioners": [{
    "type": "shell",
    "scripts": "centos-7-x86_64/scripts.sh"
  }],
  "post-processors": [{
    "type": "vagrant",
    "output": "centos-7-x86_64.box"
  }]
}
