{
  "variables": {
    "my_iso_url": "http://mirrors.kernel.org/centos/6.8/isos/x86_64/CentOS-6.8-x86_64-minimal.iso"
  },
  "builders":[{
    "type": "virtualbox-iso",
    "guest_os_type": "RedHat_64",
    "iso_url": "{{user `my_iso_url`}}",
    "iso_checksum": "ec49c297d484b9da0787e5944edc38f7c70f21c0f6a60178d8e9a8926d1949f4",
    "iso_checksum_type": "sha256",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_wait_timeout": "3000s",
    "vm_name": "paker-centos-6.8-x86_64",
    "ssh_pty": true,
    "http_directory": "./",
    "boot_wait": "30s",
    "boot_command":[
      "<esc><wait>",
      "linux ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-6.8-x86_64/anaconda-ks.cfg ",
      "<enter><wait>"
    ],
    "shutdown_command": "sudo /sbin/poweroff"
  }],
  "provisioners": [{
    "type": "shell",
    "scripts": "centos-6.8-x86_64/scripts.sh"
  }],
  "post-processors": [{
    "type": "vagrant",
    "output": "centos-6.8-x86_64.box"
  }]
}
